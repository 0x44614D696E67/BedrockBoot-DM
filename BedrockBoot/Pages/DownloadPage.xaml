<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BedrockBoot.Pages.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BedrockBoot.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid Margin="40,32,40,0" Padding="0">
        <Grid
            Height="80"
            MaxWidth="1000"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <BreadcrumbBar
                x:Name="BreadcrumbBar"
                Margin="10,4"
                FontSize="30"
                ItemClicked="BreadcrumbBar_ItemClicked">
                <BreadcrumbBar.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="30" Text="{Binding}" />
                    </DataTemplate>
                </BreadcrumbBar.ItemTemplate>
            </BreadcrumbBar>
            <StackPanel
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <FontIcon
                    Margin="4"
                    FontSize="18"
                    Foreground="Gray"
                    Glyph="&#xE71C;" />
                <TextBlock
                    Margin="4"
                    VerticalAlignment="Center"
                    Foreground="Gray">
                    过滤器
                </TextBlock>

                <!--ComboBox Width="120" Margin="5" x:Name="VersionType" SelectedIndex="0">
                    <ComboBoxItem>正式版</ComboBoxItem>
                    <ComboBoxItem>预览版</ComboBoxItem>
                    <ComboBoxItem>Beta 版</ComboBoxItem>
                DM: 下面是另一种方式
                </ComboBox-->

                <controls:Segmented
                    x:Name="VersionType"
                    Margin="5"
                    SelectedIndex="0"
                    SelectionMode="Single">
                    <controls:SegmentedItem Icon="{ui:FontIcon Glyph=&#xE7FC;}" ToolTipService.ToolTip="正式版" />
                    <controls:SegmentedItem Icon="{ui:FontIcon Glyph=&#xE8A1;}" ToolTipService.ToolTip="预览版" />
                    <controls:SegmentedItem Icon="{ui:FontIcon Glyph=&#xEA8D;}" ToolTipService.ToolTip="测试版" />
                </controls:Segmented>

            </StackPanel>
        </Grid>
        <ScrollViewer
            MaxWidth="1000"
            Margin="0,80,0,0"
            HorizontalAlignment="Stretch">
            <Frame x:Name="SubPageFrame" />
        </ScrollViewer>
    </Grid>
</Page>