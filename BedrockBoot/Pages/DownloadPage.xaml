<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BedrockBoot.Pages.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BedrockBoot.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid HorizontalAlignment="Stretch" MaxWidth="1000"
              Height="80" VerticalAlignment="Top">
            <BreadcrumbBar x:Name="BreadcrumbBar" FontSize="30" Margin="10,4"
                           ItemClicked="BreadcrumbBar_ItemClicked">
                <BreadcrumbBar.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="30"/>
                    </DataTemplate>
                </BreadcrumbBar.ItemTemplate>
            </BreadcrumbBar>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                <FontIcon Glyph="&#xE71C;" Foreground="Gray" FontSize="18"
                          Margin="4"/>
                <TextBlock VerticalAlignment="Center" Margin="4"
                           Foreground="Gray">过滤器</TextBlock>
                <ComboBox Width="120" Margin="5" x:Name="VersionType" SelectedIndex="0">
                    <ComboBoxItem>正式版</ComboBoxItem>
                    <ComboBoxItem>预览版</ComboBoxItem>
                    <ComboBoxItem>Beta 版</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Grid>
        <ScrollViewer HorizontalAlignment="Stretch" Margin="0,80,0,0" MaxWidth="1000">
            <Frame x:Name="SubPageFrame"></Frame>
        </ScrollViewer>
    </Grid>
</Page>