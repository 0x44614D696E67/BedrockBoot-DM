<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BedrockBoot.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:BedrockBoot"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    dev:BreadcrumbNavigator.IsHeaderVisible="True"
    dev:BreadcrumbNavigator.PageTitle="设置"
    mc:Ignorable="d">

    <ScrollView
        Margin="{ThemeResource ContentPageMargin}"
        Padding="{ThemeResource ContentPagePadding}"
        HorizontalAlignment="Stretch"
        VerticalScrollBarVisibility="Auto">
        <StackPanel
            Margin="10"
            dev:PanelAttach.ChildrenTransitions="Default"
            Spacing="4">
            <dev:SettingsCard
                Description="探索自定义应用程序外观和行为的不同方法。您可以更改材料、主题和更多选项，以适应您的风格和偏好。"
                Header="外观"
                HeaderIcon="{dev:FontIcon Glyph=&#xE771;}"
                IsClickEnabled="True" />
            <dev:SettingsCard
                Description="关于 BedrockBoot 以及开发者"
                Header="关于"
                HeaderIcon="{dev:FontIcon Glyph=&#xE946;}"
                IsClickEnabled="True" />

        </StackPanel>
    </ScrollView>
</Page>
