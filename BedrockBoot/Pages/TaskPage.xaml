<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BedrockBoot.Pages.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:controls2="using:Riverside.Toolkit.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:BedrockBoot.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:task="using:BedrockBoot.Controls"
    xmlns:type="using:BedrockBoot.Types"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="TaskTemplate" x:DataType="type:TaskType">
            <task:TaskCard
                Description="{x:Bind Description}"
                Header="{x:Bind Header}"
                Progress="{x:Bind Progress}" />
        </DataTemplate>
    </Page.Resources>

    <Grid Margin="40,48,40,0">
        <task:TaskCard />
        <ScrollViewer
            HorizontalScrollBarVisibility="Auto"
            HorizontalScrollMode="Auto"
            IsVerticalScrollChainingEnabled="False">
            <ItemsRepeater
                ItemTemplate="{StaticResource TaskTemplate}"
                ItemsSource="{x:Bind TaskList}"
                Layout="{StaticResource VerticalStackLayout}" />
        </ScrollViewer>

    </Grid>
</Page>
