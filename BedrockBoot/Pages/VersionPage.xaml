<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BedrockBoot.Pages.VersionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:devWinUi="using:DevWinUI"
    xmlns:local="using:BedrockBoot.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tk="using:CommunityToolkit.WinUI.Controls"
    xmlns:vers="using:BedrockBoot.Versions"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="VersionCard" x:DataType="vers:NowVersions">
            <devWinUi:SettingsExpander Description="{x:Bind Version_Path}" Header="{x:Bind DisPlayName}">
                <devWinUi:SettingsExpander.HeaderIcon>
                    <ImageIcon
                        Width="48"
                        Height="48"
                        Source="/Assets/Release_Icon.png" />
                </devWinUi:SettingsExpander.HeaderIcon>
                <Button
                    Click="ButtonBase_OnClick"
                    Content="启动"
                    Style="{StaticResource AccentButtonStyle}"
                    Tag="{x:Bind}" />
                <devWinUi:SettingsExpander.Items>
                    <devWinUi:SettingsCard
                        ActionIcon="{devWinUi:FontIcon Glyph=&#xE8A7;}"
                        BorderBrush="Red"
                        Click="ModManagerButton"
                        Header="管理Mod"
                        IsClickEnabled="True"
                        Tag="{x:Bind}" />
                    <devWinUi:SettingsCard
                        ActionIcon="{devWinUi:FontIcon Glyph=&#xE8A7;}"
                        Click="DButtonBase_OnClick"
                        Header="管理延迟注入Mod"
                        IsClickEnabled="True"
                        Tag="{x:Bind}" />
                    <devWinUi:SettingsCard
                        ActionIcon="{devWinUi:FontIcon Glyph=&#xE74D;}"
                        Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                        Click="DeleteButton"
                        Header="删除该版本"
                        IsClickEnabled="True"
                        Tag="{x:Bind}" />
                </devWinUi:SettingsExpander.Items>
            </devWinUi:SettingsExpander>
        </DataTemplate>
    </Page.Resources>
    <Grid Margin="40,48,40,0" Padding="0">
        <Grid
            Height="80"
            MaxWidth="1000"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <BreadcrumbBar
                x:Name="BreadcrumbBar"
                Margin="10,0,10,4"
                FontSize="30">
                <BreadcrumbBar.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="30" Text="{Binding}" />
                    </DataTemplate>
                </BreadcrumbBar.ItemTemplate>
            </BreadcrumbBar>
        </Grid>
        <Grid Margin="0,64,0,10">
            <ScrollViewer HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <!--  主内容区域占70%  -->
                        <ColumnDefinition Width="7*" MaxWidth="1000" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>
                    <ItemsRepeater
                        x:Name="VersionList"
                        Grid.Column="1"
                        MaxWidth="1000"
                        HorizontalAlignment="Stretch"
                        ItemTemplate="{StaticResource VersionCard}"
                        ItemsSource="{x:Bind VersionsList, Mode=OneWay}">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="5" />
                        </ItemsRepeater.Layout>
                    </ItemsRepeater>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
