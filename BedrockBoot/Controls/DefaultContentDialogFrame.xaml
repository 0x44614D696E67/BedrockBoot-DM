<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BedrockBoot.Controls.DefaultContentDialogFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BedrockBoot.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="-24"
    mc:Ignorable="d">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="*" />
            <RowDefinition Height="64" />
        </Grid.RowDefinitions>

        <!--
            ProgressBar
            Margin="0,-2,0,0"
            VerticalAlignment="Top"
            Canvas.ZIndex="2"
            IsIndeterminate="True" /
        -->

        <Grid Grid.Row="0">
            <StackPanel
                Padding="0"
                BorderBrush="Transparent"
                BorderThickness="0"
                CornerRadius="0"
                Orientation="Horizontal"
                Spacing="12"
                Style="{ThemeResource StackPanelStyle}">
                <FontIcon
                    Margin="16,8,0,8"
                    FontSize="16"
                    Glyph="{x:Bind HeaderIcon, Mode=TwoWay}" />
                <TextBlock
                    Margin="0,16,0,0"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="{x:Bind Header, Mode=TwoWay}" />
            </StackPanel>
        </Grid>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="0"
            Orientation="Vertical"
            Style="{ThemeResource StackPanelStyle}">
            <ContentControl Margin="0,0,0,0" Content="{x:Bind Content, Mode=TwoWay}" />
        </StackPanel>
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Transparent"
            CornerRadius="0"
            Style="{ThemeResource GridCardPanel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="136" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="136" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Click="CloseButton_Click"
                Content="关闭"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                Style="{StaticResource SubtleButtonStyle}" />
            <Button
                Grid.Row="1"
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Click="FinishButton_Click"
                Content="完成"
                Style="{ThemeResource AccentButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>
