<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BedrockBoot.Controls.ContentDialogContent.DownloadGameContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="using:BedrockBoot.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:BedrockBoot.Controls.ContentDialogContent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel
            Margin="0,0,15,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Spacing="8">
            <TextBox
                x:Name="NameBox"
                HorizontalAlignment="Stretch"
                Header="实例名称" />

            <TextBlock Text="下载路径" />
            <dev:ElementGroup HorizontalAlignment="Stretch">
                <TextBox x:Name="TextBox" Width="267" />
                <Button Click="ButtonBase_OnClick" Content="{dev:FontIcon Glyph=&#xE838;}" />
            </dev:ElementGroup>

            <TextBlock Text="启动页面颜色" />
            <Button HorizontalAlignment="Stretch">
                <Button.Content>
                    <FontIcon Glyph="&#xE790;" />
                </Button.Content>
                <Button.Flyout>
                    <Flyout>
                        <controls:ColorPicker x:Name="colorPicker" Color="#EF323D"/>
                    </Flyout>
                </Button.Flyout>
            </Button>

            <TextBlock Text="启动页面图片(空则默认)" />
            <dev:ElementGroup HorizontalAlignment="Stretch">
                <TextBox x:Name="imgback" Width="267" />
                <Button Click="ButtonBaseImg_OnClick" Content="{dev:FontIcon Glyph=&#xE838;}" />
            </dev:ElementGroup>
        </StackPanel>
    </ScrollViewer>
</Page>
