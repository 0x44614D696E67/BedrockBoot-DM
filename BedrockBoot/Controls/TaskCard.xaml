<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BedrockBoot.Controls.TaskCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:local="using:BedrockBoot.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <controls:SettingsCard
        HorizontalAlignment="Stretch"
        Header="{x:Bind Header}"
        HeaderIcon="{x:Bind _HeaderIcon}">
        <StackPanel Orientation="Horizontal" Spacing="2">
            <ContentControl Content="{x:Bind Content}" />
            <Button
                x:Name="Button"
                Padding="4"
                HorizontalAlignment="Stretch"
                Click="CloseButton_Click"
                Content="{dev:FontIcon Glyph=&#xE711;}"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                Style="{ThemeResource ChromelessButtonStyle}"
                ToolTipService.ToolTip="取消该任务" />
        </StackPanel>

    </controls:SettingsCard>
</UserControl>
